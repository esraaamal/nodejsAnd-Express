<h3><a style="margin-right: 20px;" class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i>Create New</a>Employee Lists</h3>
<table class="table table-striped">
<thead>
    <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>City</th>
    </tr>
</thead>
<tbody>
    {{#each list}}
    <tr>
    <td>{{this.fullName}}</td>
    <td>{{this.email}}</td>
    <td>{{this.mobile}}</td>
    <td>{{this.cite}}</td>
    <td>
        <a href="/employee/{{this._id}}" ><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
        <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?')"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
    
    </td>
    </tr>
    {{/each}}
</tbody>
</table>